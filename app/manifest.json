{
  "app": {
    "background": {
      "scripts": [
        "js/utils.js",
        "js/LocalStorage.js",
        "js/js.cookie.js",
        "js/src/User.js",
        "background.js"
    ]
    }
  },
  "manifest_version": 2,
  "name": "Dayling Meeting",
  "version": "1.0",
  "description": "App para realizar a dayling meeting",
  "icons":  {
    "16": "img/icon16.jpg",
    "48": "img/icon48.jpg",
    "128": "img/icon128.jpg"
  },
  "externally_connectable": {
    "matches": [
      "*://daylingmeet.firebaseio.com/*",
      "*://daylingmeet.appspot.com/*"
    ]
  },
  "offline_enabled": true,
